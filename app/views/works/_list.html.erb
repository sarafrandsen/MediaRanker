<h3><%= @works %></h3>
<table>
  <thead>
    <tr>
      <th width="80">
        Votes
      </th>
      <th>
        Title
      </th>
      <th>
        Created By
      </th>
      <th width="100">
        Published
      </th>
      <th width="100">
        Upvote
      </th>
    </tr>
  </thead>
  <tbody>
    <% works.each do |work| %>
       <tr>
         <td><%= work.get_upvotes.count %></td>
         <td><%= link_to work.title, work_path(work.id) %></td>
         <td><%= work.creator %></td>
         <td><%= work.publication_year %></td>
         <td><%= link_to 'Upvote', upvote_path(work.id), class: 'button' %></td>
       </tr>
     <% end %>
   </tbody>
 </table>
