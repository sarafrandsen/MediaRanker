<%# add new/edit works form  %>

<%= form_for @work do |f| %>
  <%= f.label :category %>
  <%= select(:work, :category, [["Book", "book"], ["Movie", "movie"], ["Album", "album"]]) %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit form_btn %>
<% end %>
