<%# view individual works %>

<%# work details %>
<section>
  <h1>
    <%= @work.title %>
  </h1>
  <article>
    <%= @work.creator %>
    <%= @work.year_published %>
    <%= @work.description %>
  </article>
  <nav>
    <ul>
      <li>
        <%= link_to 'Back to media ranks', root_path %>
      </li>
      <li>
        <%= link_to 'Edit', edit_work_path(@work.id) %>
      </li>
      <li>
        <%# link to upvote %>
      </li>
      <li>
        <%= link_to "Delete", work_path(@work.id), method: :delete, data: {confirm: "Are you sure you want to delete this work?"} %>
      </li>
    </ul>
  </nav>
</section>

<section>
  <h1>
    <%# number of total votes %>
  </h1>
  <section>
    <%# user who voted %>
    <%# date they voted %>
  </section>
</section>
